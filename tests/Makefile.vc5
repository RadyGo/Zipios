#
# Will build and run test executables with Visual C++ 5 & 6
#

################## DO NOT EDIT BELOW THIS LINE ###############################

!message
!message **************
!message Running tests
!message **************
!message

all: test
!include ../win32/Makefile.com

CURRENT = $(TST_DIR)

###########################################################################

#
# Test programs
#

OBJECTS = example_zip.obj test_appzip.obj test_collcoll.obj \
	test_dircoll.obj test_zip.obj test_zipinputstream.obj \
	test_zipinputstreambuf.obj

TESTS = example_zip.exe test_appzip.exe test_collcoll.exe \
	test_dircoll.exe test_zip.exe test_zipinputstream.exe \
	test_zipinputstreambuf.exe

CPPFLAGS = /nologo /O2 /GX /I.. /D"_WINDOWS" /D"WIN32" /D"NDEBUG" \
	/I"$(ZLIB_INC)"

LINKFLAGS = /LIBPATH:$(ZLIB_LIB)

##########################################################################

#
# Building rules
#

test: $(ZIPIOS_LIB) $(TESTS)
	@echo Run the tests here

$(TESTS): $(OBJECTS) $(ZIPIOS_LIB)

$(ZIPIOS_LIB):
	@cd $(SRC_DIR)
	@nmake /nologo -f Makefile.vis static
	@cd $(TST_DIR)

.SUFFIXES: .obj .exe .cpp 

.obj.exe:
	link /nologo $(LINKFLAGS) $*.obj $(ZIPIOS_LIB) zlib.lib

clean: tidy
	@echo *************
	@echo Cleaned tests
	@echo *************
	@if exist *.obj del *.obj
	@if exist *.exe del *.exe

