#define S_ISDIR(mode)   (((mode) & _S_IFDIR) == _S_IFDIR)
#define S_ISCHR(mode)   (((mode) & _S_IFCHR) == _S_IFCHR)
#define S_ISBLK(mode)   0
#define S_ISSOCK(mode)  0
#define S_ISFIFO(mode)  (((mode) & _S_IFIFO) == _S_IFIFO)

#endif

